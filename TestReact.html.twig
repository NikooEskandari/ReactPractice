{% extends '::base.html.twig' %}

{% block maincontent_content %}
    {# FOS JS Routing #}
    <script src='{{ asset('bundles/fosjsrouting/js/router.js') }}'></script>
    <script src='{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}'></script>

    <head>
        <style>

            .checkbox-container-card-wrapper {
                border: 1px solid lightgrey;
                border-radius: 5px;
                margin-left: 2vw;
            }

            input.custom-control-input[type="checkbox"] {
                margin-right: 0.5vw;
            }

            .cities-checkbox-container {
                margin-left: 2vw;
            }

            .collapse-header a:after {
                content: '△';
                float: right;
            }

            .collapse-header a.collapsed:after {
                content: '▽';
            }

            #cards-container{
                display: flex;
                flex-flow: row wrap;
                flex-wrap: wrap;
                align-content: flex-start;
                justify-content: space-around;
                overflow: auto;
                align-self: center;
            }

            .card.card-custom{
                border-style: solid;
                border-radius: 5px;
                border-color: lightgrey;
            }

        </style>
    </head>

    <div id='root'></div>

    <script>
        let markets_data_from_server = {{ markets|json_encode()|raw }};
    </script>

    <script crossorigin src="https://unpkg.com/react@17/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@17/umd/react-dom.production.min.js"></script>
    <script src='{{ asset('bundles/map2umanifoldmaps/js/TestReact/test_react_functions.js') }}'></script>
    <script src='{{ asset('bundles/map2umanifoldmaps/js/TestReact/MarketsList.js') }}'></script>
    <script src='{{ asset('bundles/map2umanifoldmaps/js/TestReact/CitiesList.js') }}'></script>
    <script src='{{ asset('bundles/map2umanifoldmaps/js/TestReact/CardsList.js') }}'></script>
    <script src='{{ asset('bundles/map2umanifoldmaps/js/TestReact/test_react.js') }}'></script>

    {# Just for practice #}
    <script src='{{ asset('bundles/map2umanifoldmaps/js/TestReact/extra.js') }}'></script>

{% endblock %}